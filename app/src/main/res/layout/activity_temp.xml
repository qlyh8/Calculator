<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tistory.qlyh8.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/ryan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/ryan">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:layout_margin="16dp"
            android:gravity="end">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_keypad"
                android:text="@string/one"
                android:textSize="@dimen/keypadTextSize"
                android:textColor="@color/colorKeyPadNum"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_keypad"
                android:text="@string/two"
                android:textSize="@dimen/keypadTextSize"
                android:textColor="@color/colorKeyPadNum" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_keypad"
                android:text="@string/three"
                android:textSize="@dimen/keypadTextSize"
                android:textColor="@color/colorKeyPadNum" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_keypad"
                android:text="C"
                android:textColor="@color/colorKeyPadNum"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_keypad"
                android:text="@string/four"
                android:textSize="@dimen/keypadTextSize"
                android:textColor="@color/colorKeyPadNum" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_keypad"
                android:text="@string/five"
                android:textSize="@dimen/keypadTextSize"
                android:textColor="@color/colorKeyPadNum" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_keypad"
                android:text="@string/six"
                android:textSize="@dimen/keypadTextSize"
                android:textColor="@color/colorKeyPadNum" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_keypad"
                android:text=""
                android:textSize="@dimen/keypadTextSize"
                android:textColor="@color/colorKeyPadNum" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_keypad"
                android:text="@string/seven"
                android:textSize="@dimen/keypadTextSize"
                android:textColor="@color/colorKeyPadNum" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_keypad"
                android:text="@string/eight"
                android:textSize="@dimen/keypadTextSize"
                android:textColor="@color/colorKeyPadNum" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_keypad"
                android:text="@string/nine"
                android:textSize="@dimen/keypadTextSize"
                android:textColor="@color/colorKeyPadNum" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_keypad"
                android:text=""
                android:textSize="@dimen/keypadTextSize"
                android:textColor="@color/colorKeyPadNum" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_keypad"
                    android:text="@string/zero"
                    android:textSize="@dimen/keypadTextSize"
                    android:textColor="@color/colorKeyPadNum" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="="
                    android:textColor="@color/colorKeyPadNum"
                    android:textSize="@dimen/keypadTextSize"
                    android:background="@drawable/ripple_keypad"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
